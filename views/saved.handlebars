<div class="row" style="margin-top: 20px;" id="savedArticles">
    {{#unless articles}}
    <p id="noSaved">
        <h3>No Articles saved Yet! </h3>
    </p>
    {{/unless}}
    {{#each articles}}
    <div class="col-sm-12" style="margin-bottom:10px">
        <div class="card">
            <div class="card-body">
                <p class="card-text">{{title}}</p>
                <a href="{{link}}" class="btn btn-default">Learn more...</a>
                <a class="addNoteBtn btn btn-success articleNotes" data-id={{_id}}>Article Notes</a>
                <a class="deleteBtn btn btn-danger" data-id={{_id}}>DELETE from Saved</a>
            </div>
        </div>
    </div>
    {{/each}}

    <div class="modal fade saveNotes" tabindex="-1" role="dialog" aria-labelledby="saveNotesLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title saveNotesLabel"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body notesCard">
                    <form>
                        <div class="form-group">
                            <label for="note-title" class="col-form-label">Title:</label>
                            <input type="text" class="form-control" id="note-title">
                        </div>
                        <div class="form-group">
                            <label for="note-body" class="col-form-label">Note:</label>
                            <textarea class="form-control" id="note-body"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary saveNoteBtn">Save Note</button>
                </div>
            </div>
        </div>
    </div>

</div>